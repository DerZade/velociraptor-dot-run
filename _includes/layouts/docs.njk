---
layout: layouts/main.njk
hasMenu: true
styles:
  - code-theme.css
scripts:
  - menu.js
---

<div class="main flex mt-12 pt-12">

  <nav id="menu" class="sidebar">
    <div class="md:sticky md:top-20">
      <ul class="scroll-wrapper overflow-y-auto -mx-2">
        {% set groupsPages = search.pages('type=docs') | groups %}
        {% for group in groups %}
          <li {% if loop.index != 1 %}class="mt-8"{% endif %}>
            <h5 class="px-2 mb-3 lg:mb-3 uppercase tracking-wide font-semibold text-sm lg:text-xs text-gray-900">
              {{ group.title }}
            </h5>
            <ul>
              {% for docsPage in groupsPages[group.id] %}
                <li>
                  <a class="p-2 transition-colors duration-200 block hover:text-gray-900 text-gray-500 rounded {% if url == docsPage.data.url %}text-blue-500 bg-blue-50 hover:text-blue-600{% endif %}"
                     href="{{ docsPage.data.url }}">
                    {{ docsPage.data.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}

      </ul>
    </div>
  </nav>

  <article class="flex-auto min-w-0">

    {{ content | safe }}

    <nav class="py-8 my-8 border-gray-200 border-t">
      <ul class="list-none p-0 flex">
        {%- set previousPost = search.previousPage(url, 'type=docs') %}
        {%- if previousPost %}
          <li class="mr-auto">
            <a class="group border rounded flex items-center p-2 text-gray-300 hover:border-blue-500 focus:border-blue-500 transition-colors duration-300 outline-none"
               href="{{ previousPost.data.url | url }}"
               rel="prev">
              <i class="fas fa-arrow-left mr-6 group-hover:text-blue-500 group-focus:text-blue-500 transition-colors duration-300"></i>
              <div class="flex flex-col items-end">
                <span class="text-xs group-hover:text-blue-500 group-focus:text-blue-500 transition-colors duration-300">Prev</span>
                <span class="text-gray-500">{{ previousPost.data.title }}</span>
              </div>
            </a>
          </li>
        {% endif %}

        {%- set nextPost = search.nextPage(url, 'type=docs') %}
        {%- if nextPost %}
          <li class="ml-auto">
            <a class="group border rounded flex items-center p-2 text-gray-300 hover:border-blue-500 focus:border-blue-500 transition-colors duration-300 outline-none"
               href="{{ nextPost.data.url | url }}"
               rel="prev">
              <div class="flex flex-col items-start mr-6">
                <span class="text-xs group-hover:text-blue-500 group-focus:text-blue-500 transition-colors duration-300">Next</span>
                <span class="text-gray-500">{{ nextPost.data.title }}</span>
              </div>
              <i class="fas fa-arrow-right group-hover:text-blue-500 group-focus:text-blue-500 transition-colors duration-300"></i>
            </a>
          </li>
        {% endif %}
      </ul>
    </nav>

  </article>

</div>
